services:
  {{ app.name }}:
    image: {{ app.image.name }}:{{ app.image.tag }}
    container_name: {{ app.name }}
    restart: always
    ports:
      - '{{ app.port }}:{{ app.port }}'
    command: python main.py
    networks:
      - {{ app.name }}-net

networks:
  {{ app.name }}-net:
    external: true
