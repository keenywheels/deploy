services:
  {{ app.name }}:
    image: {{ app.image.name }}:{{ app.image.tag }}
    container_name: {{ app.name }}
    restart: always
    mem_limit: 1g
    cpus: 1
    volumes:
      - /var/log/{{ app.name }}:/var/log
    networks:
      - {{ app.name }}-net
      - kafka-net

networks:
  {{ app.name }}-net:
    external: true
  kafka-net:
    external: true
